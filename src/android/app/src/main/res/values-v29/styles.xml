<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 
        Tema ESPECÍFICO para Android 10+ (API 29+)
        Força MODO CLARO e desabilita Force Dark completamente
    -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- FORÇA MODO CLARO - BLOQUEIA DARK MODE -->
        <item name="android:forceDarkAllowed">false</item>
        
        <!-- FORÇA TEMA CLARO NO SISTEMA -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        
        <!-- CORES FIXAS PARA STATUS BAR E NAVIGATION BAR -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        
        <!-- Configurações de janela -->
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        
        <!-- IMPORTANTE: Desabilita animações de transição entre temas -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- Splash Screen theme -->
    <style name="AppTheme.NoActionBarLaunch" parent="AppTheme">
        <item name="android:background">@drawable/splash</item>
    </style>
    
    <!-- Tema sem animação -->
    <style name="AppTheme.NoActionBarAnimation" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>
